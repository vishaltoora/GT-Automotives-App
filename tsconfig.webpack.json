{
  "compilerOptions": {
    "target": "es2021",
    "lib": ["es2021"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "declaration": false,
    "removeComments": true,
    "baseUrl": ".",
    "paths": {
      "@gt-automotive/shared-dto": ["dist/libs/shared-dto/src/index.ts"],
      "@gt-automotive/shared-dto/*": ["dist/libs/shared-dto/src/*"],
      "@gt-automotive/database": ["libs/database/src/index.ts"],
      "@gt-automotive/database/*": ["libs/database/src/*"]
    },
    "types": ["node"]
  },
  "include": [
    "server/src/**/*.ts",
    "libs/database/src/**/*.ts",
    "dist/libs/shared-dto/src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}