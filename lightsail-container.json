{
  "serviceName": "gt-automotives-backend",
  "containers": {
    "api": {
      "image": ":gt-automotive-backend.api.latest",
      "ports": {
        "3000": "HTTP"
      },
      "environment": {
        "NODE_ENV": "production",
        "PORT": "3000"
      }
    }
  },
  "publicEndpoint": {
    "containerName": "api",
    "containerPort": 3000,
    "healthCheck": {
      "healthyThreshold": 2,
      "unhealthyThreshold": 3,
      "timeoutSeconds": 5,
      "intervalSeconds": 30,
      "path": "/api/health",
      "successCodes": "200-299"
    }
  }
}