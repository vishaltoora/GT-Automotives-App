{
  "name": "server",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "server/src",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": [
        "production",
        "^production",
        {
          "externalDependencies": ["webpack-cli"]
        }
      ],
      "outputs": ["{workspaceRoot}/dist/server"],
      "options": {
        "commands": [
          "mkdir -p dist/server",
          "NX_TASK_TARGET_PROJECT=server NX_TASK_TARGET_TARGET=build NX_TASK_TARGET_CONFIGURATION=production webpack-cli build --node-env=production",
          "ls -la dist/server/ || echo 'Checking build output'"
        ],
        "parallel": false
      },
      "configurations": {
        "development": {
          "options": {
            "commands": [
              "cd server && webpack-cli build --node-env=development",
              "mkdir -p ../dist/server",
              "find . -name 'main.js' -path '*/dist/server/*' -exec cp {} ../dist/server/ \\; || echo 'Build files will be in Nx cache'"
            ]
          }
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "server:build",
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": {
          "buildTarget": "server:build:development"
        },
        "production": {
          "buildTarget": "server:build:production"
        }
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "cache": true,
      "dependsOn": ["^typecheck"],
      "inputs": [
        "{projectRoot}/package.json",
        "{workspaceRoot}/tsconfig.base.json",
        "{projectRoot}/tsconfig.json",
        "{projectRoot}/tsconfig.app.json",
        "{projectRoot}/src/**/*.ts",
        {
          "dependentTasksOutputFiles": "**/*.d.ts"
        },
        {
          "externalDependencies": ["typescript"]
        }
      ],
      "outputs": [
        "{projectRoot}/dist/**/*.d.ts",
        "{projectRoot}/dist/**/*.d.ts.map",
        "{projectRoot}/dist/tsconfig.app.tsbuildinfo"
      ],
      "options": {
        "cwd": "server",
        "command": "tsc --build --emitDeclarationOnly"
      }
    }
  },
  "tags": ["npm:private"]
}